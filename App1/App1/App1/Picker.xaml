<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Picker">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="myPicker" Title="Contact Methods" SelectedIndexChanged="Picker_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>Email</x:String>
                    <x:String>Call</x:String>
                    <x:String>Message</x:String>
                    <x:String>WhatsApp</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>