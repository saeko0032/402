<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.QuotesPage"
             Padding="20">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Next" Clicked="Button_Clicked" />
            <Label Text="{Binding Source={x:Reference slider1},Path=Value,StringFormat='Font Size : {0:N0}'}"/>
        <Slider 
            Maximum="50"
            Minimum="16"
            x:Name="slider1"></Slider>
            <Label x:Name="label2" FontSize="{Binding Source={x:Reference slider1},Path=Value}"
                  />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>