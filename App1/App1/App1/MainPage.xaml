<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1"
             x:Class="App1.MainPage">

    <StackLayout
        Orientation="Vertical">
        <BoxView Color="Green"
                 Opacity="{Binding Source={x:Reference slider1},Path=Value}"></BoxView>
        <Label Text="{Binding Source={x:Reference slider1},Path=Value,StringFormat='Value is {0:f2}'}"
               Opacity="{Binding Source={x:Reference slider1},Path=Value}"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               x:Name="label1"
               />
        <Slider HorizontalOptions="FillAndExpand"
                x:Name="slider1"></Slider>
    </StackLayout>

</ContentPage>