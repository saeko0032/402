<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.StackLayout" BackgroundColor="#127ac7">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarine" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" />
            <Label Text="Cross-platform apps made easy" FontSize="18" />
            <Button Text="Login" BackgroundColor="#1dabf0" HorizontalOptions="StartAndExpand"/>
            <Button Text="Register" BackgroundColor="#1dabf0" HorizontalOptions="StartAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>