<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PickerDemo.DatePickerDemo"    
             xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <ContentPage.Content>
        <StackLayout>
            <DatePicker Date="{x:Static sys:DateTime.Today}" Format="d MMM yyyy" MaximumDate="1 Jan 2018" MinimumDate="1 Jan 2017"></DatePicker>
            <TimePicker Time="14:00" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>