<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.CustomCellList">
    <ListView x:Name="myListView" SeparatorColor="Blue" HasUnevenRows="True">
        <ListView.ItemTemplate>
            <DataTemplate>
                <!--<TextCell Text="{Binding Name}" Detail="{Bindind Status}" />-->
                <!--<ImageCell Text="{Binding Name}" Detail="{Binding Status}" ImageSource="{Binding ImageUrl}"/> -->
                <ViewCell>
                    <StackLayout Orientation="Horizontal" BackgroundColor="Yellow" Padding="5">
                        <Image Source="{Binding ImageUrl}" />
                        <StackLayout Orientation="Vertical" HorizontalOptions="StartAndExpand">
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding Status}" />
                        </StackLayout>
                        <Button Text="follow"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>