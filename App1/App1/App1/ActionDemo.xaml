<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.ActionDemo">
    <SearchBar Placeholder="Search..." TextChanged="SearchBar_TextChanged"></SearchBar>
    <ListView x:Name="myListView" SeparatorColor="Blue" IsPullToRefreshEnabled="True" Refreshing="MyListView_Refreshing">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Name}" Detail="{Binding Status}">
                    <TextCell.ContextActions>
                        <MenuItem 
                            Text="Call"
                            Clicked="Call_Clicked" 
                            CommandParameter="{Binding .}"
                            />
                        <MenuItem
                            Text="Delete"
                            Clicked="Delete_Clicked"
                            CommandParameter="{Binding .}"
                            />
                    </TextCell.ContextActions>
                </TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>